<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/clab_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/this_is_clab" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="8dp">


            <TextView
                android:id="@+id/textViewSpaceName"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageViewSpacePhoto"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_toRightOf="@id/imageViewSpacePhoto"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewSpaceBuilding"
                android:layout_width="187dp"
                android:layout_height="18dp"
                android:layout_below="@+id/textViewSpaceName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="107dp"
                android:layout_marginRight="107dp"
                android:layout_toRightOf="@id/imageViewSpacePhoto" />

            <TextView
                android:id="@+id/textViewSpaceRoom"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewSpaceName"
                android:layout_marginStart="201dp"
                android:layout_marginLeft="201dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/imageViewSpacePhoto"
                android:layout_toRightOf="@id/imageViewSpacePhoto"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewSpaceCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewSpacePhoto"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="-58dp"
                android:layout_toEndOf="@+id/imageViewSpacePhoto"
                android:layout_toRightOf="@+id/imageViewSpacePhoto"
                android:text="TextView" />

            <ImageView
                android:id="@+id/imageViewSpacePhoto"
                android:layout_width="94dp"
                android:layout_height="108dp"
                app:srcCompat="@drawable/computerlab" />

            <TextView
                android:id="@+id/textViewSpaceAmmenities"
                android:layout_width="210dp"
                android:layout_height="22dp"
                android:layout_below="@+id/imageViewSpacePhoto"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-57dp"
                android:layout_toEndOf="@+id/imageViewSpacePhoto"
                android:layout_toRightOf="@+id/imageViewSpacePhoto"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewSpaceHours"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewSpacePhoto"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="-27dp"
                android:layout_toEndOf="@+id/imageViewSpacePhoto"
                android:layout_toRightOf="@+id/imageViewSpacePhoto"
                android:text="TextView" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>